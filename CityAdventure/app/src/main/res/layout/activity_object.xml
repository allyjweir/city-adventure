<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/glasgow_background">

        <TextView
            android:id="@+id/adventure_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent_light_gray"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:text="Kelvingrove Art Gallery"
            android:textSize="20sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/achievement_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vlad.cityadventure.object.ObjectActivity"
        tools:ignore="MergeRootFrame" />
</LinearLayout>