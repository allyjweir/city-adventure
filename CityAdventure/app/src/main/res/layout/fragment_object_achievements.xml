<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:layout_margin="10dp"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="SEE ALL"
            android:textSize="10sp"
            android:layout_margin="5dp"
            android:padding="2sp"
            android:background="@color/transparent_light_gray"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/achievement_1_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/achievement_1_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@android:drawable/star_big_on"/>

            <TextView
                android:id="@+id/achievement_1_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement_2_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/achievement_2_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@android:drawable/star_big_on"/>

            <TextView
                android:id="@+id/achievement_2_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/achievement_3_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/achievement_3_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@android:drawable/star_big_on"/>

            <TextView
                android:id="@+id/achievement_3_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/achievement_4_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/achievement_4_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@android:drawable/star_big_on"/>

            <TextView
                android:id="@+id/achievement_4_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/achievement_5_container"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/achievement_5_image"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:src="@android:drawable/star_big_on"/>

            <TextView
                android:id="@+id/achievement_5_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>